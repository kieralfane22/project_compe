<!DOCTYPE html>
<html>
<head><title>Schedule Appointment</title></head>
<body>
  <h2>New Appointment</h2>
  <form method="POST" action="/admin/appointments/add">
    <label>Patient:</label>
    <select name="patientId" required>
      <% patients.forEach(p => { %>
        <option value="<%= p.id %>"><%= p.name %></option>
      <% }); %>
    </select><br>
    <label>Date/Time:</label>
    <input type="datetime-local" name="date" required><br>
    <textarea name="notes" placeholder="Notes (optional)"></textarea><br>
    <button type="submit">Save</button>
  </form>
</body>
</html>
