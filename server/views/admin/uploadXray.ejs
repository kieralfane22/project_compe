<!DOCTYPE html>
<html>
<head>
  <title>Upload X-ray</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      display: flex;
    }
    .sidebar {
      width: 250px;
      background-color: #343a40;
      padding-top: 20px;
      color: white;
    }
    .sidebar a {
      color: white;
      display: block;
      padding: 10px 20px;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #495057;
    }
    .main-content {
      flex: 1;
      padding: 40px;
    }
    hr.sidebar-divider {
      border-color: rgba(255, 255, 255, 0.2);
      margin: 1rem 0;
    }
  </style>
</head>
<body>

  <div class="sidebar">
    <h4 class="text-center">Admin Panel</h4>
    <hr class="sidebar-divider">
    <a href="/admin/dashboard">Dashboard</a>
    <a href="/admin/appointments">Appointments</a>
    <a href="/admin/patients">Patients</a>
    <a href="/admin/xrays">X-rays</a>
    <a href="/admin/invoices">Invoices</a>
    <hr class="sidebar-divider">
    <a href="/logout">Logout</a>
  </div>

  <div class="main-content">
    <h2>Upload X-ray Image</h2>
    <form action="/admin/xrays/upload" method="POST" enctype="multipart/form-data" class="mt-4">
      <div class="mb-3">
        <label for="patient" class="form-label">Select Patient</label>
        <select name="patientId" id="patient" class="form-select" required>
          <% patients.forEach(p => { %>
            <option value="<%= p.id %>"><%= p.name %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label for="xray" class="form-label">X-ray Image</label>
        <input type="file" name="xray" id="xray" accept="image/*" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="notes" class="form-label">Notes</label>
        <textarea name="notes" id="notes" class="form-control" rows="3" placeholder="Any notes..."></textarea>
      </div>

      <button type="submit" class="btn btn-success">Upload</button>
    </form>
  </div>

</body>
</html>
