<html>
<head><title>Edit Procedure</title></head>
<body>
  <h2>Edit Procedure</h2>
  <form method="POST" action="/admin/procedures/edit/<%= procedure.id %>">
    <label>Appointment:</label>
    <select name="appointmentId">
      <% appointments.forEach(a => { %>
        <option value="<%= a.id %>" <%= a.id === procedure.appointmentId ? 'selected' : '' %>>
          <%= a.Patient.name %> â€” <%= a.date.toLocaleString() %>
        </option>
      <% }); %>
